#!/bin/sh

STANDBY=dhcpsrv2

OPTS="-av"

rsync $OPTS --delete --exclude=netdb-logs --exclude=dhcpd.pid \
    /local/dhcp-root/etc/ /local/dhcp-root/etc-standby/

perl -pi -e "s/next-server dhcpsrv1/next-server dhcpsrv2/go" /local/dhcp-root/etc-standby/dhcpd.conf

rsync $OPTS --delete --exclude=dhcpd.pid \
    --password-file=/local/rsync/rsync.pw \
    /local/dhcp-root/etc-standby/ dhcp@$STANDBY::dhcp-root/etc/

rsync $OPTS --delete --password-file=/local/rsync/rsync.pw \
    /local/tftp/ dhcp@$STANDBY::tftp/
